{% extends 'base.html.twig' %}
{% block title %} Ajout d'une catégorie {% endblock %}
{% block transparant %} {% endblock %}
{% block body %}
    {{ form_start(form) }}
    <!-- Page Inner -->
    <form method="post" name="fourma" >
        <section class="lis-bg-light pb-5">
            <div class="container pt-5">
                <div class="row wow fadeInUp">
                    <div class="col-12 col-sm-6">
                        <div class="page-title">
                            <h2>Ajout d'une catégorie</h2>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!--End Page Inner -->
        <!-- Pricing -->
        <section>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-9 mb-5 mb-lg-0">

                        <div class="card lis-brd-light wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                            <hr/>
                            <div class="row p-4">
                                <div class="col-12 col-sm-12 mb-3">
                                    <h6 class="lis-font-weight-500"><i class="fa fa-tag pr-2 lis-f-14"></i> Catégorie</h6>

                                </div>
                                <div class="col-12 col-sm-12">
                                    <div class="form-group row">
                                        <label class="col-12 col-md-2 col-form-label">Catégorie</label>
                                        <div class="col-12 col-md-10">
                                            {{ form_errors(form.nom) }}
                                            {{ form_widget(form.nom, {'attr': {'class': 'form-control border-top-0 border-left-0 border-right-0 rounded-0','placeholder':'Categorie PLEASE !'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>

                            <div class="row p-4">
                                <div class="col-12 col-sm-12">
                                    {{ form_widget(form.Valider, {'attr': {'class': 'btn btn-primary btn-default mt-3' }}) }} </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </section>
    </form>

    {{ form_end(form) }}

{% endblock %}